@if (Pattern != "")
{
    @Result.ToString(Pattern)
}
else
{
    @Result
}


@code {
    [Parameter] public DateTime Date { get; set; }
    [Parameter] public string TimeZone { get; set; }
    [Parameter] public string Pattern { get; set; } = "";
    private DateTime Result { get; set; }

    protected override void OnInitialized()
    {
        TimeZoneInfo est;
        est = TimeZoneInfo.FindSystemTimeZoneById(TimeZone);
        Result = TimeZoneInfo.ConvertTime(DateTime.UtcNow, est);
    }

}
